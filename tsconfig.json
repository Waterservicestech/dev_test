{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true, 
    "baseUrl": "./src",
    "paths": {
    "@models/*": ["src/models/*"],
    "@utils/*": ["src/utils/*"]
  }
  },
  "include": ["src/**/*", "src/db.test.ts", "src/entity/User.ts", "src/entity/Post.ts"],
  "exclude": ["node_modules"]
}